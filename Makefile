#------------------------------------------------------------------------------
# exports:
#------------------------------------------------------------------------------

export CFLAGS= -Wall -Werror -g
export LFLAGS= -pthread
export bin-dir= $(basedir)/usr/sbin
export cfg-dir= $(basedir)/etc/BlackBird

#------------------------------------------------------------------------------
# all:
#------------------------------------------------------------------------------

all:
	mkdir bin
	make -C src

#------------------------------------------------------------------------------
# clean:
#------------------------------------------------------------------------------

clean:
	rm -rf bin
	make -C src clean

#------------------------------------------------------------------------------
# install:
#------------------------------------------------------------------------------

install:
	make -C src install
	mkdir -p $(cfg-dir)
