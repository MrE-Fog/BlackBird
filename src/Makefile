#------------------------------------------------------------------------------
# all:
#------------------------------------------------------------------------------

all:		bb_main bb_daemon bb_fifo
		gcc $(CFLAGS) bb_main.o bb_daemon.o bb_fifo.o $(LFLAGS) -o ../bin/bb
		rm -f *.o	

#------------------------------------------------------------------------------
# bb_main:
#------------------------------------------------------------------------------

bb_main:	bb_main.o
		gcc $(CFLAGS) -c bb_main.c

#------------------------------------------------------------------------------
# bb_daemon:
#------------------------------------------------------------------------------

bb_daemon:	bb_daemon.o
		gcc $(CFLAGS) -c bb_daemon.c

#------------------------------------------------------------------------------
# bb_fifo:
#------------------------------------------------------------------------------

bb_fifo:	bb_fifo.o
		gcc $(CFLAGS) -c bb_fifo.c

#------------------------------------------------------------------------------
# clean:
#------------------------------------------------------------------------------

clean:
		rm -f *.o
		rm -f ../bin/bb

#------------------------------------------------------------------------------
# install:
#------------------------------------------------------------------------------

install:
		mkdir -p $(bin-dir)
		install -m755 ../bin/bb $(bin-dir)
